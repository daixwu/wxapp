/**app.wxss**/
.container {
  font-family: PingFang SC, Lantinghei SC, Microsoft Yahei, Hiragino Sans GB, Microsoft Sans Serif, WenQuanYi Micro Hei, sans-serif;
  font-weight: 300;
  background: #f6f6f6;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
}

.black {
  color: #000000;
}

.semi {
  color: #353535;
}

.grey {
  color: #888888;
}

.light {
  color: #b2b2b2;
}

.pull-left {
  float: left;
}

.pull-right {
  float: right;
}

.show {
  display: block;
}

.hide {
  display: none;
}