/**index.wxss**/

.container{
  padding: 0;
  height: 1500rpx;
}

.container .feed-item {
  background: #ffffff;
  padding: 30rpx 30rpx 20rpx;
  margin-bottom: 18rpx;
  box-shadow: 0 0.0625em 0 0 rgba(230, 230, 230, 0.5);
}

.feed-item .post-title {
  font-size: 18px;
  font-weight: 400;
}

.feed-item .post-img {
  margin: 10px 0;
  text-align: center;
}

.feed-item .post-excerpt {
  font-size: 16px;
  line-height: 26px;
}

.feed-item .post-foot {
  overflow: hidden;
  font-size: 14px;
  margin: 10px 0 6px;
}